<template>
  <div>
    <h1 class="mb-8 font-bold text-3xl">
      <inertia-link class="text-indigo-400 hover:text-indigo-600" :href="route('@{{ entities }}')">@{{ models }}</inertia-link>
      <span class="text-indigo-400 font-medium"> / </span>Create
    </h1>
    <div class="bg-white rounded-md shadow overflow-hidden max-w-3xl">
      <form @submit.prevent="store">
        <div class="p-8 -mr-6 -mb-8 flex flex-wrap">
          <text-input v-model="form.name" :error="form.errors.title" class="pr-6 pb-8 w-full lg:w-1/2" label="Title" />
        </div>
        <div class="px-8 py-4 bg-gray-50 border-t border-gray-100 flex justify-end items-center">
          <button type="submit" :disabled="form.processing" class="flex items-center btn-indigo">
            <div v-if="form.processing" class="btn-spinner mr-2" />
            Create @{{ model }}
          </button>
        </div>
      </form>
    </div>
  </div>
</template>

<script>
import Layout from '@/Shared/Layout'
import TextInput from '@/Shared/TextInput'
import SelectInput from '@/Shared/SelectInput'
import LoadingButton from '@/Shared/LoadingButton'

export default {
  metaInfo: { title: 'Create @{{ model }}' },
  components: {
    LoadingButton,
    SelectInput,
    TextInput,
  },
  layout: Layout,
  remember: 'form',
  data() {
    return {
      form: this.$inertia.form({
        title: null,
      }),
    }
  },
  methods: {
    store() {
      this.form.post(this.route('@{{ entities }}.store'))
    },
  },
}
</script>
