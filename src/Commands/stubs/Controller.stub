        return Inertia::render('{{ Models }}/Edit', [
                '{{ entity }}' => ${{ entity }}
            ]);
    }

    /**
     * Update the specified resource in storage.
     *
     * @param Request $request
     * @param {{ model }} ${{ entity }}
     * @return Redirect
     */
    public function update(Request $request, $id)
    {
        return Redirect::back()->with('success', '{{ model }} updated.');
    }

